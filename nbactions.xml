<actions>
	<action>
		<actionName>run</actionName>
		<packagings>
			<packaging>jar</packaging>
		</packagings>
		<goals>
			<goal>process-classes</goal>
			<goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
		</goals>
		<properties>
			<exec.args>-classpath %classpath co.virtualdragon.vanillaVotifier.impl.VanillaVotifier</exec.args>
			<exec.executable>java</exec.executable>
			<exec.workingdir>target</exec.workingdir>
		</properties>
	</action>
	<action>
		<actionName>debug</actionName>
		<packagings>
			<packaging>jar</packaging>
		</packagings>
		<goals>
			<goal>process-classes</goal>
			<goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
		</goals>
		<properties>
			<exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath co.virtualdragon.vanillaVotifier.impl.VanillaVotifier</exec.args>
			<exec.executable>java</exec.executable>
			<jpda.listen>true</jpda.listen>
			<exec.workingdir>target</exec.workingdir>
		</properties>
	</action>
	<action>
		<actionName>profile</actionName>
		<packagings>
			<packaging>jar</packaging>
		</packagings>
		<goals>
			<goal>process-classes</goal>
			<goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
		</goals>
		<properties>
			<exec.args>-classpath %classpath co.virtualdragon.vanillaVotifier.impl.VanillaVotifier</exec.args>
			<exec.executable>java</exec.executable>
			<exec.workingdir>target</exec.workingdir>
		</properties>
	</action>
</actions>